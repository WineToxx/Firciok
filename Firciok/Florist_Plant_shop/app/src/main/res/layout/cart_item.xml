<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7sp"
    app:cardElevation="10sp"
    android:background="@color/white"
    android:layout_marginHorizontal="20sp"
    android:layout_marginVertical="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:layout_marginVertical="10sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/item_bg"/>
            <ImageView
                android:id="@+id/Product_Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bouquet"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginVertical="10sp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:id="@+id/Product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="FIG PLANT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#753A23"/>

                <TextView
                    android:id="@+id/Product_price"
                    android:layout_width="117sp"
                    android:layout_height="wrap_content"
                    android:textColor="#753A23"
                    android:text="100/-"
                    android:textSize="16sp"
                    android:paddingLeft="22dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date Added :"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:paddingRight="7sp"
                    android:textSize="13sp"
                    android:textColor="#66776A"/>
                <TextView
                    android:id="@+id/Current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14 2:2024"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="#66776A"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity :"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:paddingRight="7sp"
                    android:textSize="13sp"
                    android:textColor="#66776A"
                    />
                <TextView
                    android:id="@+id/Total_Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="#66776A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AED"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/Total_Price"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="300"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>
                <FrameLayout
                    android:layout_width="100sp"
                    android:layout_height="26sp"
                    android:layout_gravity="bottom|end">

                    <ImageView
                        android:id="@+id/Delete_item"
                        android:layout_width="43sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:src="@drawable/dust_bin_symbol" />

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>